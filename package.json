{
	"name": "react-framework",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@reduxjs/toolkit": "^1.8.5",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/jest": "^27.5.2",
		"@types/node": "^17.0.45",
		"@types/react": "^18.0.21",
		"@types/react-dom": "^18.0.6",
		"@types/react-redux": "^7.1.24",
		"antd": "4.23.4",
		"axios": "^1.0.0",
		"lodash": "^4.17.21",
		"moment": "^2.29.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-redux": "^8.0.4",
		"react-router-dom": "^6.4.1",
		"react-scripts": "5.0.1",
		"react-select": "^5.7.0",
		"sass": "^1.55.0",
		"typescript": "^4.8.4",
		"web-vitals": "^2.1.4"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"build:prd:linux": "GENERATE_SOURCEMAP=false && react-scripts build",
		"build:prd:win": "set \"GENERATE_SOURCEMAP=false\" && react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"analyze": "source-map-explorer 'build/static/js/*.js'",
		"pretty:fix": "prettier --config ./.prettierrc --write \"src/**/*.{ts, tsx, scss}\"",
		"pretty:check": "prettier --config ./.prettierrc --check \"src/**/*.{ts, tsx, scss}\"",
		"lint:check": "eslint -c ./.eslintrc.json src/**",
		"lint:fix": "eslint --fix -c ./.eslintrc.json src/**"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@types/lodash": "^4.14.191",
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"eslint": "^8.24.0",
		"eslint-plugin-react": "^7.31.8",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "2.7.1",
		"source-map-explorer": "^2.5.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write"
		],
		"src/**": [
			"eslint -c ./.eslintrc.json src/**"
		]
	}
}
